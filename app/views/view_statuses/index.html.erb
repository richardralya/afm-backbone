<p id="notice"><%= notice %></p>

<h1>View Statuses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Item</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @view_statuses.each do |view_status| %>
      <tr>
        <td><%= view_status.user_id %></td>
        <td><%= view_status.item_id %></td>
        <td><%= view_status.status %></td>
        <td><%= link_to 'Show', view_status %></td>
        <td><%= link_to 'Edit', edit_view_status_path(view_status) %></td>
        <td><%= link_to 'Destroy', view_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New View Status', new_view_status_path %>
