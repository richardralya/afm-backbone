<p id="notice"><%= notice %></p>

<h1>Criteria</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Name</th>
      <th>Content</th>
      <th>Cardinality</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criteria.each do |criterium| %>
      <tr>
        <td><%= criterium.item_id %></td>
        <td><%= criterium.name %></td>
        <td><%= criterium.content %></td>
        <td><%= criterium.cardinality %></td>
        <td><%= criterium.status %></td>
        <td><%= link_to 'Show', criterium %></td>
        <td><%= link_to 'Edit', edit_criterium_path(criterium) %></td>
        <td><%= link_to 'Destroy', criterium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

