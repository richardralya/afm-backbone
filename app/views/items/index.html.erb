<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>User</th>
      <th>Name</th>
      <th>Content</th>
      <th>Media link</th>
      <th>Critera count</th>
      <th>Date created</th>
      <th>Date modified</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.topic_id %></td>
        <td><%= item.user_id %></td>
        <td><%= item.name %></td>
        <td><%= item.content %></td>
        <td><%= item.media_link %></td>
        <td><%= item.critera_count %></td>
        <td><%= item.status %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

