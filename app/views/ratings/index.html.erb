<p id="notice"><%= notice %></p>

<h1>Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Criterium</th>
      <th>User</th>
      <th>User rank</th>
      <th>Rating</th>
      <th>Date created</th>
      <th>Date modified</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.item_id %></td>
        <td><%= rating.criterium_id %></td>
        <td><%= rating.user_id %></td>
        <td><%= rating.user_rank %></td>
        <td><%= rating.rating %></td>
        <td><%= rating.status %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path %>
