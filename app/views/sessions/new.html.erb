<h1>Log in</h1>
<%= form_for(:session, :url => login_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :submitted_password %><br />
		<%= f.text_field :submitted_password %>
	</div>
	<div class="actions">
		<%= f.submit "Sign in"%>
	</div>	
<% end %>

<p>New user? <%= link_to "Sign up Now!", signup_path %></p>
